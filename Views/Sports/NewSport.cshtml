@{
}

@model SportModel

@using (Html.BeginForm("AddSport", "Sports", FormMethod.Post))
{
    <div class="row mb-3">
        <div class="mr-3">
            @Html.TextBoxFor(x => x.SportName, new { @class = "form-control col-sm-12", placeholder = "Sport name" })
        </div>
        <div class="mr-3">
            @Html.LabelFor(x => x.TeamActivity)
            @Html.CheckBoxFor(x => x.TeamActivity)
        </div>


        <input type="submit" value="Add" class="btn btn-secondary" />
    </div>
}