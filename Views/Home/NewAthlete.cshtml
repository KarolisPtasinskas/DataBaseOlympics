@{
}

@model ParticipantsModel

<h3>Add new athlete</h3>

@using (Html.BeginForm("AddAthlete", "Home", FormMethod.Post))
{
    <div class="row mb-3">
        <div class="mr-3">
            @Html.TextBoxFor(x => x.Athlete.FirstName, new { @class = "form-control col-sm-12", placeholder = "First name" })
        </div>
        <div class="mr-3">
            @Html.TextBoxFor(x => x.Athlete.LastName, new { @class = "form-control col-sm-12", placeholder = "Last name" })
        </div>
        <div class="mr-3">
            @Html.DropDownListFor(x => x.Athlete.Country, new SelectList(Model.AllCountries, "Id", "CountryName"), null, new { @class = "form-control" })
        </div>
        <div class="mr-3">
            @Html.ListBoxFor(x => x.Athlete.Sports, new MultiSelectList(@Model.AllSports, "Id", "SportName"), new { id = "multiSelectDropDown", multiple = "multiple", style = "width:200px" })
        </div>
        <div>
            @Html.HiddenFor(x => x.Athlete.Id)
        </div>
        <div>
            <input type="submit" value="Add" class="btn btn-secondary" />
        </div>
    </div>
    
}


@section scripts {
    <script>
        $("#multiSelectDropDown").chosen();
    </script>
}