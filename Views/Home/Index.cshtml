@{
    ViewData["Title"] = "Athletes";
}

@model ParticipantsModel

<div class="container">
    <h1 class="mb-5">List of all participating athletes</h1>

    @using (Html.BeginForm("SortedAthletes", "Home", FormMethod.Post))
    {
        <div class="d-flex mb-3">
            <p class="mr-3">Group by: </p>
            <div class="mr-3">
                @Html.DropDownListFor(x => x.OrderBy, new SelectList(Model.OrderByList), null, new { @class = "form-control" })
            </div>
            <div>
                <input type="submit" value="Go" class="btn btn-secondary" />
            </div>
        </div>
    }


    @using (Html.BeginForm("FilterAthletes", "Home", FormMethod.Post))
    { 
<div class="d-flex mb-3">
    <p class="mr-3">Filter by: </p>
    <div class="mr-3">
        @Html.DropDownListFor(x => x.FilterByList, new SelectList(Model.AllCountries, "CountryName", "CountryName"), null, new { @class = "form-control" })
    </div>
    <div class="mr-3">
        @Html.DropDownListFor(x => x.FilterByList, new SelectList(Model.AllSports, "SportName", "SportName"), null, new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" value="Go" class="btn btn-secondary" />
    </div>
</div>
    }

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Country</th>
                    <th scope="col">Discipline</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AllAthletes)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.CountryName</td>
                        <td>
                            @foreach (var sport in item.SportsNames)
                            {
                                <p>@sport</p>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditAthlete", "Home", new { id = $"{item.Id}" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    <div>
        @Html.ActionLink("Add athlete", "NewAthlete")
    </div>

</div>
